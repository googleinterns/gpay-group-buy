{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "rootDir": ".",
    "outDir": "build",
    "skipLibCheck": true,
    "strict": true,
    "baseUrl": "./src/",
    "typeRoots": [
      "./src/custom-typings",
      "node_modules/@types"
    ],
  },
  "include": [
    "src",
    "tests"
  ]
}
