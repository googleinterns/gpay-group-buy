{
  "extends": [
    "./node_modules/gts/",
    "plugin:jest/recommended",
    "plugin:jest/style"
  ],
  "plugins": [
    "import"
  ],
  "rules": {
    "import/order": [
      "error",
      {
        "groups": [
          "builtin",
          "external",
          "internal"
        ],
        "newlines-between": "always",
        "alphabetize": {
          "order": "asc",
          "caseInsensitive": true
        }
      }
    ]
  },
  "overrides": [
    {
      "files": [
        "**/__tests__/**/*.+(ts|tsx|js)",
        "**/?(*.)+(spec|test).+(ts|tsx|js)"
      ],
      "rules": {
        "node/no-unpublished-import": 0,
        // Disable because we this for TS typecasting so that we
        // can access the helper functions in our mocks.
        "jest/no-mocks-import": 0
      }
    }
  ]
}
